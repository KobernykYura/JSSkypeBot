{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./built",
        "rootDir": "./src",
        "allowJs": true,
        "strict": true,
        "incremental": true,
        "tsBuildInfoFile": "./lib/.tsbuildinfo"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "*.zip",
        "**/*.spec.ts"
    ]
}