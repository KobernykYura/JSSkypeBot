{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "types": [
            "node"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "outDir": "./built",
        "rootDir": "./src",
        "allowJs": true,
        "strict": true,
        "incremental": true,
        "tsBuildInfoFile": "./lib/.tsbuildinfo",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "*.zip",
        "**/*.spec.ts"
    ]
}